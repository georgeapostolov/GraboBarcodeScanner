<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppThemeEdit" parent="Theme.AppCompat.Light.DarkActionBar">
	    <item name="colorControlNormal">#ffffff</item>
	    <item name="colorControlActivated">@color/colorEdit</item>
	    <item name="colorControlHighlight">@color/colorEdit</item>
		<item name="android:textColorHint">@color/colorEdit</item>
	</style>

	<style name="checkBoxStyle" parent="Theme.AppCompat.Light.DarkActionBar">
	    <item name="colorAccent">#ffffff</item>
	    <item name="android:textColorSecondary">#ffffff</item>
	</style>

</resources>
