<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/success_activity_price_title"
		android:layout_width="126dp"
		android:layout_height="24dp"
		android:text="Цена:"
		android:textColor="#909090"
		android:textSize="17sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/success_activity_price_text"
		android:layout_width="262dp"
		android:layout_height="26dp"
		android:textColor="#333333"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/success_activity_price_title"/>

	<TextView
		android:id="@+id/success_activity_amount_paid_title"
		android:layout_width="126dp"
		android:layout_height="24dp"
		android:layout_marginTop="15dp"
		android:text="Платени:"
		android:textColor="#909090"
		android:textSize="17sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/success_activity_price_text"/>

	<TextView
		android:id="@+id/success_activity_amount_paid_text"
		android:layout_width="126dp"
		android:layout_height="26dp"
		android:textColor="#333333"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/success_activity_amount_paid_title"/>

	<TextView
		android:id="@+id/success_activity_amount_to_surcharge_title"
		android:layout_width="126dp"
		android:layout_height="24dp"
		android:layout_marginLeft="10dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="65dp"
		android:text="За доплащане:"
		android:textColor="#909090"
		android:textSize="17sp"
		app:layout_constraintStart_toEndOf="@+id/success_activity_amount_paid_title"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/success_activity_amount_to_surcharge_text"
		android:layout_width="126dp"
		android:layout_height="26dp"
		android:layout_marginLeft="10dp"
		android:layout_marginStart="10dp"
		android:textColor="#333333"
		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@+id/success_activity_amount_paid_text"
		app:layout_constraintTop_toBottomOf="@+id/success_activity_amount_to_surcharge_title"/>

</android.support.constraint.ConstraintLayout>